{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "anvil",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": false,
        "readDir": true,
        "copyFile": false,
        "createDir": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "exists": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/anvil.iconset/icon_32x32.png",
        "icons/anvil.iconset/icon_128x128.png",
        "icons/anvil.iconset/icon_256x256.png",
        "icons/anvil.iconset/icon_512x512.png",
        "icons/anvil.iconset/icon_1024x1024.png",
        "icons/anvil.icns",
        "icons/anvil.ico"
      ],
      "identifier": "com.owengage.anvil",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Anvil: Minecraft world viewer",
        "width": 800,
        "height": 600
      }
    ]
  }
}
